<div class="col-lg-{{ widget.width }} col-12 mb-4" id="widget-{{ widget.id }}"
  {% if widget.refresh_interval > 0 %}
  hx-get="/admin/dashboard/widgets/{{ widget.id }}"
  hx-trigger="every {{ widget.refresh_interval }}s"
  hx-swap="outerHTML"
  {% endif %}>
  <div class="card h-100">
    <div class="card-header d-flex justify-content-between align-items-center">
      <span><i class="bi bi-{{ widget.icon }} me-2"></i>{{ widget.title }}</span>
      <a href="/admin/audits" class="btn btn-sm btn-outline-primary">View All</a>
    </div>
    <div class="card-body p-0">
      {% if data.activities|length > 0 %}
      <div class="list-group list-group-flush" style="max-height: 350px; overflow-y: auto;">
        {% for activity in data.activities %}
        <div class="list-group-item">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              {% set badge_class = activity.event == 'created' ? 'bg-success' : (activity.event == 'updated' ? 'bg-warning text-dark' : 'bg-danger') %}
              <span class="badge {{ badge_class }} me-2">{{ activity.event }}</span>
              <span class="fw-bold">{{ activity.type }}</span>
              <span class="text-muted">#{{ activity.record_id }}</span>
            </div>
            <small class="text-muted">{{ activity.time_ago }}</small>
          </div>
          <small class="text-muted">by {{ activity.user }}</small>
        </div>
        {% endfor %}
      </div>
      {% else %}
      <div class="text-center py-5 text-muted">
        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
        No recent activity
      </div>
      {% endif %}
    </div>
  </div>
</div>
