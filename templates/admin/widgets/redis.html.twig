<div class="col-12 col-lg-{{ widget.width }} mb-4" id="widget-{{ widget.id }}"
  {% if widget.refresh_interval > 0 %}
  hx-get="/admin/dashboard/widgets/{{ widget.id }}"
  hx-trigger="every {{ widget.refresh_interval }}s"
  hx-swap="outerHTML"
  {% endif %}>
  <div class="card shad border-0 h-100">
    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
      <span>
        <i class="bi bi-{{ widget.icon }} me-2"></i>{{ widget.title }}

      </span>
      <button class="btn btn-sm btn-outline-secondary" 
              hx-get="/admin/dashboard/widgets/{{ widget.id }}" 
              hx-target="#widget-{{ widget.id }}" 
              hx-swap="outerHTML">
        <i class="bi bi-arrow-clockwise"></i>
      </button>
    </div>
    <div class="card-body">
      {% if data.message %}
        <div class="alert alert-{{ data.status == 'unavailable' ? 'secondary' : 'danger' }} mb-0">
          <i class="bi bi-{{ data.status == 'unavailable' ? 'info-circle' : 'exclamation-triangle' }} me-2"></i>
          {{ data.message }}
        </div>
      {% else %}
        <div class="list-group list-group-flush">
          {% for key, stat in data.stats %}
          <div class="list-group-item px-0 d-flex justify-content-between align-items-center">
            <div>
              <i class="bi bi-{{ stat.icon }} text-muted me-2"></i>
              <span>{{ stat.label }}</span>
            </div>
            <span class="text-muted small">{{ stat.value }}</span>
          </div>
          {% if stat.percent is defined and stat.percent > 0 %}
          <div class="progress mb-2" style="height: 4px;">
            {% set bar_class = stat.status is defined and stat.status == 'ok' ? 'bg-success' : (stat.status is defined and stat.status == 'warning' ? 'bg-warning' : 'bg-danger') %}
            <div class="progress-bar {{ bar_class }}" role="progressbar" style="width: {{ stat.percent }}%"></div>
          </div>
          {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>
