<div class="col-12 col-lg-{{ widget.width }} mb-4" id="widget-{{ widget.id }}"
  {% if widget.refresh_interval > 0 %}
  hx-get="{{ uri('dashboard.widgets.render', {id: widget.id}) }}"
  hx-trigger="every {{ widget.refresh_interval }}s"
  hx-swap="outerHTML"
  {% endif %}>
  <div class="card shad border-0 h-100">
    <div class="card-header border-0 d-flex justify-content-between align-items-center">
      <span><i class="bi bi-{{ widget.icon }} me-2"></i>{{ widget.title }}</span>
      <button class="btn btn-sm btn-outline-secondary"
        hx-get="{{ uri('dashboard.widgets.render', {id: widget.id}) }}"
        hx-swap="outerHTML"
        hx-target="#widget-{{ widget.id }}">
        <i class="bi bi-arrow-clockwise"></i>
      </button>
    </div>
    <div class="card-body">
      <div class="row g-3">
        {% for stat in data.stats %}
        <div class="col-xl col-md-4 col-6">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-{{ stat.color }} bg-opacity-10 rounded-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                <i class="bi bi-{{ stat.icon }} text-{{ stat.color }} fs-4" title="{{ stat.label }}"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3 text-truncate">
              <div class="small text-muted text-truncate" title="{{ stat.label }}">{{ stat.label }}</div>
              <div class="fs-4 fw-bold">{{ stat.value|number_format }}</div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
