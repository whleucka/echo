<div class="col-{{ widget.width }} mb-4" id="widget-{{ widget.id }}"
  {% if widget.refresh_interval > 0 %}
  hx-get="/admin/dashboard/widgets/{{ widget.id }}"
  hx-trigger="every {{ widget.refresh_interval }}s"
  hx-swap="outerHTML"
  {% endif %}>
  <div class="card h-100">
    <div class="card-header">
      <i class="bi bi-{{ widget.icon }} me-2"></i>{{ widget.title }}
    </div>
    <div class="card-body">
      <div class="row g-3">
        {% for stat in data.stats %}
        <div class="col-xl col-md-4 col-6">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-{{ stat.color }} bg-opacity-10 rounded-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                <i class="bi bi-{{ stat.icon }} text-{{ stat.color }} fs-4"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <div class="small text-muted">{{ stat.label }}</div>
              <div class="fs-4 fw-bold">{{ stat.value|number_format }}</div>
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
