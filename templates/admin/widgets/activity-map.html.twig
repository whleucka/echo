<div class="col-12 col-lg-{{ widget.width }} mb-4 d-none d-md-block" id="widget-{{ widget.id }}"
  {% if widget.refresh_interval > 0 %}
  hx-get="{{ uri('dashboard.widgets.render', {id: widget.id}) }}?range={{ data.range }}"
  hx-trigger="every {{ widget.refresh_interval }}s"
  hx-swap="outerHTML"
  {% endif %}>
  <div class="card shad border-0 h-100">
    <div class="card-header border-0 d-flex justify-content-between align-items-center">
      <span><i class="bi bi-{{ widget.icon }} me-2"></i>{{ widget.title }}</span>
      <button class="btn btn-sm btn-outline-secondary"
        hx-get="{{ uri('dashboard.widgets.render', {id: widget.id}) }}?range={{ data.range }}"
        hx-swap="outerHTML"
        hx-target="#widget-{{ widget.id }}">
        <i class="bi bi-arrow-clockwise"></i>
      </button>
    </div>
    <div class="card-body p-3">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="small text-muted">
          <strong class="text-dark">{{ data.total|number_format }}</strong> unique IPs from
          <strong class="text-dark">{{ data.country_count }}</strong> {{ data.country_count == 1 ? 'country' : 'countries' }}
        </div>
      </div>
      <div id="activity-world-map"
        data-countries="{{ data.countries_json }}"
        data-max="{{ data.max }}"
        style="width:100%;height:360px;"></div>
      {% if data.top|length > 0 %}
      <div class="mt-3">
        <div class="heatmap-legend d-flex justify-content-end align-items-center mt-2 small text-muted">
          <span class="me-3">Less</span>
          <span class="d-inline-block bg-light border"></span>
          <span class="d-inline-block bg-success bg-opacity-25 border"></span>
          <span class="d-inline-block bg-success bg-opacity-50 border"></span>
          <span class="d-inline-block bg-success bg-opacity-75 border"></span>
          <span class="d-inline-block bg-success border"></span>
          <span class="ms-2">More</span>
        </div>
        <div class="mt-2 small text-muted fw-semibold">Top 10 Countries</div>
        <div class="d-flex flex-wrap gap-2 mt-1 small text-muted">
          {% for item in data.top %}
            <span class="badge bg-light text-dark border">
              {{ item.flag|raw }} {{ item.code }}
              <strong>{{ item.count }}</strong>
            </span>
          {% endfor %}
        </div>
      </div>
      {% endif %}
      <div class="mt-3">
        <div class="btn-group btn-group-sm" role="group">
          {% set ranges = {'today': 'Today', '7d': '7 Days', '30d': '30 Days', 'year': 'Year'} %}
          {% for key, label in ranges %}
          <button type="button"
            class="btn {{ data.range == key ? 'btn-primary' : 'btn-outline-secondary' }}"
            hx-get="{{ uri('dashboard.widgets.render', {id: widget.id}) }}?range={{ key }}"
            hx-target="#widget-{{ widget.id }}"
            hx-swap="outerHTML">
            {{ label }}
          </button>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
