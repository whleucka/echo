<div class="col-12 col-lg-{{ widget.width }} mb-4" id="widget-{{ widget.id }}"
  {% if widget.refresh_interval > 0 %}
  hx-get="/admin/dashboard/widgets/{{ widget.id }}?range={{ data.range }}"
  hx-trigger="every {{ widget.refresh_interval }}s"
  hx-swap="outerHTML"
  {% endif %}>
  <div class="card shad border-0 h-100">
    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
      <span><i class="bi bi-{{ widget.icon }} me-2"></i>{{ widget.title }}</span>
      <div class="d-flex align-items-center gap-2">
        <div class="btn-group btn-group-sm" role="group">
          {% set ranges = {'today': 'Today', '7d': '7 Days', '30d': '30 Days', 'year': 'Year'} %}
          {% for key, label in ranges %}
          <button type="button"
            class="btn {{ data.range == key ? 'btn-primary' : 'btn-outline-secondary' }}"
            hx-get="/admin/dashboard/widgets/{{ widget.id }}?range={{ key }}"
            hx-target="#widget-{{ widget.id }}"
            hx-swap="outerHTML">
            {{ label }}
          </button>
          {% endfor %}
        </div>
        <button class="btn btn-sm btn-outline-secondary"
          hx-get="/admin/dashboard/widgets/{{ widget.id }}?range={{ data.range }}"
          hx-swap="outerHTML"
          hx-target="#widget-{{ widget.id }}">
          <i class="bi bi-arrow-clockwise"></i>
        </button>
      </div>
    </div>
    <div class="card-body p-3">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="small text-muted">
          <strong class="text-dark">{{ data.total|number_format }}</strong> requests from
          <strong class="text-dark">{{ data.country_count }}</strong> {{ data.country_count == 1 ? 'country' : 'countries' }}
        </div>
      </div>
      <div id="activity-world-map"
        data-countries="{{ data.countries_json }}"
        data-max="{{ data.max }}"
        style="width:100%;height:360px;"></div>
      {% if data.top|length > 0 %}
      <div class="mt-3">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-2 small text-muted">
          <div class="d-flex flex-wrap gap-2">
            {% for item in data.top %}
              <span class="badge bg-light text-dark border">
                {{ item.flag }} {{ item.code }}
                <strong>{{ item.count }}</strong>
              </span>
            {% endfor %}
          </div>
          <div class="d-flex align-items-center gap-1 flex-shrink-0">
            <span>Less</span>
            <span class="d-inline-block border" style="width:14px;height:14px;background:#e5e7eb"></span>
            <span class="d-inline-block border" style="width:14px;height:14px;background:rgba(22,163,74,0.3)"></span>
            <span class="d-inline-block border" style="width:14px;height:14px;background:rgba(22,163,74,0.55)"></span>
            <span class="d-inline-block border" style="width:14px;height:14px;background:rgba(22,163,74,0.8)"></span>
            <span class="d-inline-block border" style="width:14px;height:14px;background:rgb(22,163,74)"></span>
            <span>More</span>
          </div>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
</div>
