<div class="col-12 col-lg-{{ widget.width }} mb-4" id="widget-{{ widget.id }}"
  {% if widget.refresh_interval > 0 %}
  hx-get="/admin/dashboard/widgets/{{ widget.id }}"
  hx-trigger="every {{ widget.refresh_interval }}s"
  hx-swap="outerHTML"
  {% endif %}>
  <div class="card shad border-0 h-100">
    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
      <span><i class="bi bi-{{ widget.icon }} me-2"></i>{{ widget.title }}</span>
      <button class="btn btn-sm btn-outline-secondary"
        hx-get="/admin/dashboard/widgets/{{ widget.id }}"
        hx-swap="outerHTML"
        hx-target="#widget-{{ widget.id }}">
        <i class="bi bi-arrow-clockwise"></i>
      </button>
    </div>
    <div class="card-body">
      <div class="row g-3 mb-3">
        <div class="col-12">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-info bg-opacity-10 rounded-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                <i class="bi bi-calendar-check text-info fs-4"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3">
              <div class="small text-muted">Today's Events</div>
              <div class="fs-4 fw-bold">{{ data.today }}</div>
            </div>
          </div>
        </div>
      </div>

      <div class="row g-2 mb-3">
        <div class="col-4">
          <div class="text-center p-2 bg-success bg-opacity-10 rounded">
            <div class="fs-5 fw-bold">{{ data.by_event.created }}</div>
            <small class="text-muted">Created</small>
          </div>
        </div>
        <div class="col-4">
          <div class="text-center p-2 bg-warning bg-opacity-10 rounded">
            <div class="fs-5 fw-bold">{{ data.by_event.updated }}</div>
            <small class="text-muted">Updated</small>
          </div>
        </div>
        <div class="col-4">
          <div class="text-center p-2 bg-danger bg-opacity-10 rounded">
            <div class="fs-5 fw-bold">{{ data.by_event.deleted }}</div>
            <small class="text-muted">Deleted</small>
          </div>
        </div>
      </div>

      {% if data.by_model|length > 0 %}
      <div class="small text-muted mb-2">Top Changes</div>
      {% for model, count in data.by_model %}
      <div class="d-flex justify-content-between align-items-center py-1">
        <span class="text-truncate" style="max-width: 150px;">{{ model }}</span>
        <span class="badge bg-secondary">{{ count }}</span>
      </div>
      {% endfor %}
      {% endif %}

      {% if data.recent|length > 0 %}
      <hr class="my-3">
      <div class="small text-muted mb-2">Recent Activity</div>
      {% for item in data.recent %}
      <div class="d-flex align-items-center py-1 border-bottom">
        {% if item.event == 'created' %}
          <span class="badge bg-success me-2" style="width: 60px;">create</span>
        {% elseif item.event == 'updated' %}
          <span class="badge bg-warning text-dark me-2" style="width: 60px;">update</span>
        {% else %}
          <span class="badge bg-danger me-2" style="width: 60px;">delete</span>
        {% endif %}
        <div class="flex-grow-1 text-truncate small">
          <strong>{{ item.type }}</strong> #{{ item.record_id }}
          <span class="text-muted">by {{ item.user }}</span>
        </div>
        <small class="text-muted">{{ item.time_ago }}</small>
      </div>
      {% endfor %}
      {% elseif data.by_model|length == 0 %}
      <div class="text-center text-muted py-3">
        <i class="bi bi-inbox fs-3 d-block mb-2"></i>
        No audit data yet
      </div>
      {% endif %}
    </div>
    <div class="card-footer bg-white border-0">
      <a href="/admin/audits" hx-boost="true" hx-target="#module" hx-select="#module" hx-swap="outerHTML" hx-push-url="true" class="text-muted small">
        <i class="bi bi-arrow-right me-1"></i>View full audit log
      </a>
    </div>
  </div>
</div>
