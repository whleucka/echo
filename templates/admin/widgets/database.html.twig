<div class="col-12 col-lg-{{ widget.width }} mb-4" id="widget-{{ widget.id }}"
  {% if widget.refresh_interval > 0 %}
  hx-get="/admin/dashboard/widgets/{{ widget.id }}"
  hx-trigger="every {{ widget.refresh_interval }}s"
  hx-swap="outerHTML"
  {% endif %}>
  <div class="card shad border-0 h-100">
    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
      <span><i class="bi bi-{{ widget.icon }} me-2"></i>{{ widget.title }}</span>
      <button class="btn btn-sm btn-outline-secondary"
        hx-get="/admin/dashboard/widgets/{{ widget.id }}"
        hx-swap="outerHTML"
        hx-target="#widget-{{ widget.id }}">
        <i class="bi bi-arrow-clockwise"></i>
      </button>
    </div>
    <div class="card-body">
      <div class="row g-3 mb-3">
        <div class="col-4">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-primary bg-opacity-10 rounded-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                <i class="bi bi-table text-primary fs-4" title="Tables"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3 text-truncate">
              <div class="small text-muted text-truncate" title="Tables">Tables</div>
              <div class="fs-4 fw-bold">{{ data.table_count }}</div>
            </div>
          </div>
        </div>
        <div class="col-4">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-success bg-opacity-10 rounded-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                <i class="bi bi-list-ol text-success fs-4" title="Rows"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3 text-truncate">
              <div class="small text-muted text-truncate" title="Rows">Rows</div>
              <div class="fs-4 fw-bold">{{ data.total_rows }}</div>
            </div>
          </div>
        </div>
        <div class="col-4">
          <div class="d-flex align-items-center">
            <div class="flex-shrink-0">
              <div class="bg-info bg-opacity-10 rounded-3 d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                <i class="bi bi-hdd text-info fs-4" title="Size"></i>
              </div>
            </div>
            <div class="flex-grow-1 ms-3 text-truncate">
              <div class="small text-muted text-truncate" title="Size">Size</div>
              <div class="fs-4 fw-bold">{{ data.total_size }}</div>
            </div>
          </div>
        </div>
      </div>

      {% if data.tables|length > 0 %}
      <div class="table-responsive" style="max-height: 180px;">
        <table class="table table-sm table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Table</th>
              <th class="text-end">Rows</th>
              <th class="text-end">Size</th>
            </tr>
          </thead>
          <tbody>
            {% for table in data.tables %}
            <tr>
              <td class="text-truncate" style="max-width: 150px;">{{ table.table_name }}</td>
              <td class="text-end">{{ table.table_rows|number_format }}</td>
              <td class="text-end">{{ (table.data_size_mb + table.index_size_mb)|number_format(2) }} MB</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      {% endif %}
    </div>
  </div>
</div>
