<div class="col-12 col-lg-{{ widget.width }} mb-4" id="widget-{{ widget.id }}"
  {% if widget.refresh_interval > 0 %}
  hx-get="/admin/dashboard/widgets/{{ widget.id }}"
  hx-trigger="every {{ widget.refresh_interval }}s"
  hx-swap="outerHTML"
  {% endif %}>
  <div class="card shad border-0 h-100">
    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
      <span><i class="bi bi-{{ widget.icon }} me-2"></i>{{ widget.title }}</span>
      <button class="btn btn-sm btn-outline-secondary"
        hx-get="/admin/dashboard/widgets/{{ widget.id }}"
        hx-swap="outerHTML"
        hx-target="#widget-{{ widget.id }}">
        <i class="bi bi-arrow-clockwise"></i>
      </button>
    </div>
    <div class="card-body">
      <div class="row g-2 mb-3">
        <div class="col-4">
          <div class="text-center p-2 bg-success bg-opacity-10 rounded">
            <div class="fs-5 fw-bold">{{ data.active }}</div>
            <small class="text-muted">Active</small>
          </div>
        </div>
        <div class="col-4">
          <div class="text-center p-2 bg-warning bg-opacity-10 rounded">
            <div class="fs-5 fw-bold">{{ data.new_today }}</div>
            <small class="text-muted">New Today</small>
          </div>
        </div>
        <div class="col-4">
          <div class="text-center p-2 bg-info bg-opacity-10 rounded">
            <div class="fs-5 fw-bold">{{ data.new_week }}</div>
            <small class="text-muted">New (7d)</small>
          </div>
        </div>
      </div>

      {% if data.recent|length > 0 %}
      <div class="table-responsive" style="max-height: 180px;">
        <table class="table table-sm table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th class="text-end">Joined</th>
            </tr>
          </thead>
          <tbody>
            {% for user in data.recent %}
            <tr>
              <td class="text-truncate" style="max-width: 120px;">{{ user.name ?: 'N/A' }}</td>
              <td class="text-truncate" style="max-width: 150px;">{{ user.email }}</td>
              <td class="text-end text-muted small">{{ user.time_ago }}</td>
            </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      {% else %}
      <p class="text-muted text-center mb-0">No users found</p>
      {% endif %}
    </div>
    <div class="card-footer bg-white border-0">
      <a href="/admin/users" hx-boost="true" hx-target="#module" hx-select="#module" hx-swap="outerHTML" hx-push-url="true" class="text-muted small">
        <i class="bi bi-arrow-right me-1"></i>View all users
      </a>
    </div>
  </div>
</div>
