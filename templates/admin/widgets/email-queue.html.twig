<div class="col-12 col-lg-{{ widget.width }} mb-4" id="widget-{{ widget.id }}"
  {% if widget.refresh_interval > 0 %}
  hx-get="/admin/dashboard/widgets/{{ widget.id }}"
  hx-trigger="every {{ widget.refresh_interval }}s"
  hx-swap="outerHTML"
  {% endif %}>
  <div class="card shad border-0 h-100">
    <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
      <span><i class="bi bi-{{ widget.icon }} me-2"></i>{{ widget.title }}</span>
      <button class="btn btn-sm btn-outline-secondary"
        hx-get="/admin/dashboard/widgets/{{ widget.id }}"
        hx-swap="outerHTML"
        hx-target="#widget-{{ widget.id }}">
        <i class="bi bi-arrow-clockwise"></i>
      </button>
    </div>
    <div class="card-body">
      <div class="row g-3 mb-3">
        <div class="col-6">
          <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
            <span class="text-muted">Total Jobs</span>
            <strong class="fs-4">{{ data.total }}</strong>
          </div>
        </div>
        <div class="col-6">
          <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
            <span class="text-muted">Sent Today</span>
            <strong class="fs-4">{{ data.sent_today }}</strong>
          </div>
        </div>
      </div>

      <div class="row g-2 mb-3">
        <div class="col">
          <div class="text-center p-2 border rounded">
            <span class="badge bg-secondary mb-1">Pending</span>
            <div class="fs-5 fw-bold">{{ data.statuses.pending }}</div>
          </div>
        </div>
        <div class="col">
          <div class="text-center p-2 border rounded">
            <span class="badge bg-info text-dark mb-1">Processing</span>
            <div class="fs-5 fw-bold">{{ data.statuses.processing }}</div>
          </div>
        </div>
        <div class="col">
          <div class="text-center p-2 border rounded">
            <span class="badge bg-success mb-1">Sent</span>
            <div class="fs-5 fw-bold">{{ data.statuses.sent }}</div>
          </div>
        </div>
        <div class="col">
          <div class="text-center p-2 border rounded">
            <span class="badge bg-warning text-dark mb-1">Failed</span>
            <div class="fs-5 fw-bold">{{ data.statuses.failed }}</div>
          </div>
        </div>
        <div class="col">
          <div class="text-center p-2 border rounded">
            <span class="badge bg-danger mb-1">Exhausted</span>
            <div class="fs-5 fw-bold">{{ data.statuses.exhausted }}</div>
          </div>
        </div>
      </div>

      {% if data.failed_recent > 0 %}
      <div class="alert alert-warning py-2 px-3 small mb-3">
        <i class="bi bi-exclamation-triangle me-1"></i>
        {{ data.failed_recent }} failed/exhausted job{{ data.failed_recent != 1 ? 's' : '' }} in the last 7 days
      </div>
      {% endif %}

      {% if data.recent|length > 0 %}
      <div class="small text-muted mb-2">Recent Jobs</div>
      {% for job in data.recent %}
      <div class="d-flex align-items-center py-1 border-bottom">
        {% if job.status == 'sent' %}
          <span class="badge bg-success me-2" style="width: 72px;">sent</span>
        {% elseif job.status == 'pending' %}
          <span class="badge bg-secondary me-2" style="width: 72px;">pending</span>
        {% elseif job.status == 'processing' %}
          <span class="badge bg-info text-dark me-2" style="width: 72px;">processing</span>
        {% elseif job.status == 'failed' %}
          <span class="badge bg-warning text-dark me-2" style="width: 72px;">failed</span>
        {% elseif job.status == 'exhausted' %}
          <span class="badge bg-danger me-2" style="width: 72px;">exhausted</span>
        {% endif %}
        <div class="flex-grow-1 text-truncate small">
          <strong class="text-truncate" style="max-width: 120px; display: inline-block; vertical-align: bottom;">{{ job.subject }}</strong>
          <span class="text-muted">to {{ job.to }}</span>
          <span class="text-muted">({{ job.attempts }})</span>
        </div>
        <small class="text-muted text-nowrap">{{ job.time_ago }}</small>
      </div>
      {% endfor %}
      {% else %}
      <div class="text-center text-muted py-3">
        <i class="bi bi-inbox fs-3 d-block mb-2"></i>
        No email jobs yet
      </div>
      {% endif %}
    </div>
  </div>
</div>
