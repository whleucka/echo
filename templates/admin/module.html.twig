{% extends "layout/admin.html.twig" %}

{% block title %}{{ parent() }} | Admin > {{ module.title }}{% endblock %}

{% block module %}
  <h1 id="module-title" class="mt-2 mb-4 d-flex align-items-center">
    {% if module.icon %}<i class="bi bi-{{ module.icon }} pe-2"></i>{% endif %}
    <span>{{ module.title }}</span>
    {% if pagination is defined and pagination.total_rows is defined %}
      <span class="badge bg-secondary ms-3 fs-6">{{ pagination.total_rows }} record{{ pagination.total_rows != 1 ? 's' : '' }}</span>
    {% endif %}
  </h1>
  {{ content|raw }}
  <div id="modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
    </div>
  </div>
  <script>
    setTimeout(() => {
      const backdrop = document.querySelector(".modal-backdrop");
      if (backdrop) {
        backdrop.remove()
      }
    });
  </script>
{% endblock %}
