<div class="card h-100">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span><i class="bi bi-journal-text me-2"></i>Audit Activity (7 days)</span>
    <button class="btn btn-sm btn-outline-secondary"
      hx-get="/admin/dashboard/audit-summary"
      hx-swap="outerHTML"
      hx-target="closest .card">
      <i class="bi bi-arrow-clockwise"></i>
    </button>
  </div>
  <div class="card-body">
    <div class="row g-3 mb-3">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center p-2 bg-light rounded">
          <span class="text-muted">Today's Events</span>
          <strong class="fs-4">{{ audit.today }}</strong>
        </div>
      </div>
    </div>

    <div class="row g-2 mb-3">
      <div class="col-4">
        <div class="text-center p-2 border rounded">
          <span class="badge bg-success mb-1">Created</span>
          <div class="fs-5 fw-bold">{{ audit.by_event.created }}</div>
        </div>
      </div>
      <div class="col-4">
        <div class="text-center p-2 border rounded">
          <span class="badge bg-warning text-dark mb-1">Updated</span>
          <div class="fs-5 fw-bold">{{ audit.by_event.updated }}</div>
        </div>
      </div>
      <div class="col-4">
        <div class="text-center p-2 border rounded">
          <span class="badge bg-danger mb-1">Deleted</span>
          <div class="fs-5 fw-bold">{{ audit.by_event.deleted }}</div>
        </div>
      </div>
    </div>

    {% if audit.by_model|length > 0 %}
    <div class="small text-muted mb-2">Top Models</div>
    {% for model, count in audit.by_model %}
    <div class="d-flex justify-content-between align-items-center py-1">
      <span class="text-truncate" style="max-width: 150px;">{{ model }}</span>
      <span class="badge bg-secondary">{{ count }}</span>
    </div>
    {% endfor %}
    {% else %}
    <div class="text-center text-muted py-3">
      <i class="bi bi-inbox fs-3 d-block mb-2"></i>
      No audit data yet
    </div>
    {% endif %}
  </div>
</div>
