<div class="card h-100">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span><i class="bi bi-heart-pulse me-2"></i>System Health</span>
    <button class="btn btn-sm btn-outline-secondary"
      hx-get="/admin/dashboard/health"
      hx-swap="outerHTML"
      hx-target="closest .card">
      <i class="bi bi-arrow-clockwise"></i>
    </button>
  </div>
  <div class="card-body">
    <div class="row g-3">
      <div class="col-6">
        <div class="d-flex align-items-center mb-2">
          <i class="bi bi-cpu me-2 text-primary"></i>
          <span class="small text-muted">PHP Version</span>
        </div>
        <strong>{{ health.php_version }}</strong>
      </div>

      {% if health.uptime %}
      <div class="col-6">
        <div class="d-flex align-items-center mb-2">
          <i class="bi bi-clock-history me-2 text-primary"></i>
          <span class="small text-muted">Uptime</span>
        </div>
        <strong>{{ health.uptime }}</strong>
      </div>
      {% endif %}

      <div class="col-12">
        <div class="d-flex align-items-center mb-2">
          <i class="bi bi-memory me-2 {% if health.memory.status == 'ok' %}text-success{% elseif health.memory.status == 'warning' %}text-warning{% else %}text-danger{% endif %}"></i>
          <span class="small text-muted">Memory Usage</span>
          <span class="ms-auto small">{{ health.memory.usage }} / {{ health.memory.limit }}</span>
        </div>
        <div class="progress" style="height: 8px;">
          <div class="progress-bar {% if health.memory.status == 'ok' %}bg-success{% elseif health.memory.status == 'warning' %}bg-warning{% else %}bg-danger{% endif %}"
            role="progressbar"
            style="width: {{ health.memory.percent }}%">
          </div>
        </div>
      </div>

      <div class="col-12">
        <div class="d-flex align-items-center mb-2">
          <i class="bi bi-hdd me-2 {% if health.disk.status == 'ok' %}text-success{% elseif health.disk.status == 'warning' %}text-warning{% else %}text-danger{% endif %}"></i>
          <span class="small text-muted">Disk Usage</span>
          <span class="ms-auto small">{{ health.disk.used }} / {{ health.disk.total }}</span>
        </div>
        <div class="progress" style="height: 8px;">
          <div class="progress-bar {% if health.disk.status == 'ok' %}bg-success{% elseif health.disk.status == 'warning' %}bg-warning{% else %}bg-danger{% endif %}"
            role="progressbar"
            style="width: {{ health.disk.percent }}%">
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
