{% extends "layout/base.html.twig" %}

{% block head_js %}
  <script src="/js/admin.js"></script>
{% endblock %}

{% block head_css %}
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
  <link href="/css/admin.css" rel="stylesheet">
{% endblock %}

{% block content %}
  <section id="admin" class="d-flex">

    <nav id="nav-sidebar" class="text-light {% if sidebar_state %}hide{% endif %}">
      <header class="d-flex justify-content-center align-items-center p-2">
        <h4 class="m-0"><i class="bi bi-shield-check pe-1"></i> <span class="desc">Admin</span></h4>
      </header>

      <div id="sidebar-filter" class="mt-3 p-2">
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-search"></i></span>
          <input type="text" class="form-control" placeholder="...">
        </div>
      </div>

      <div id="sidebar-links" class="p-3" hx-boost="true" hx-trigger="click" hx-select="#module" hx-target="#module" hx-swap="outerHTML">
        <ul class="nav nav-pills flex-column mb-auto">
          <li>
            <a href="/admin/dashboard" class="nav-link link link-light" hx-on::after-request="sidebarLinkActive(event)">
              <i class="bi bi-rocket"></i> <span class="ps-2 desc">Dashboard</span>
            </a>
          </li>
          <li>
            <a href="/admin/sessions" class="nav-link link link-light" hx-on::after-request="sidebarLinkActive(event)">
              <i class="bi bi-person-bounding-box"></i> <span class="ps-2 desc">Sessions</span>
            </a>
          </li>
          <li>
            <a href="/admin/users" class="nav-link link link-light" hx-on::after-request="sidebarLinkActive(event)">
              <i class="bi bi-people"></i> <span class="ps-2 desc">Users</span>
            </a>
          </li>
          <li>
            <a href="/sign-out" hx-boost="false" class="nav-link link-light" hx-on::after-request="sidebarLinkActive(event)">
              <i class="bi bi-door-closed"></i> <span class="ps-2 desc">Sign Out</span>
            </a>
          </li>
        </ul>
      </div>
    </nav>

    <section id="view" class="d-flex flex-column flex-grow-1">
      <nav id="nav-top" class="d-flex">
        <button hx-get="?sidebar" hx-target="#nav-sidebar" hx-select="#nav-sidebar" hx-swap="outerHTML" class="btn"><i class="bi bi-list"></i></button>
        <div class="d-flex align-items-center ms-auto p-2">
          <img class="avatar" src="{{ user.avatar }}" />
        </div>
      </nav>
      <section id="module" class="flex-grow-1 p-3">
        {% block module %}{% endblock %}
      </section>
    </section>

  </section>
{% endblock %}
