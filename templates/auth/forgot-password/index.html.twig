{% extends "layout/base.html.twig" %}

{% block title %}{{ parent() }} - Forgot Password{% endblock %}

{% block content %}
    <style>
    html, body {
        height: 100%;
    }
    #forgot-password form {
        max-width: 380px;
        width: 100%;
    }
    #forgot-password h4 {
        font-weight: 700;
    }
    #forgot-password .auth-subtext {
        color: #6c757d;
        font-size: 0.9rem;
    }
    </style>
    <section id="forgot-password" class="container d-flex justify-content-center align-items-center h-100">
        <form class="bg-light rounded shadow-sm p-4 pt-5 pb-4" method="POST" hx-post="{{ uri('auth.forgot-password.post') }}" hx-swap="outerHTML" hx-target="#forgot-password" hx-select="#forgot-password">
            {{ csrf()|raw }}
            <h4 class="mb-1">Forgot Password</h4>
            <p class="auth-subtext mb-4">Enter your email and we'll send you a reset link.</p>
            {% include "components/flash.html.twig" %}
            <div class="form-floating mb-3">
                <input type="input" class="form-control {% if validationErrors.email is defined %}is-invalid{% endif %}" id="email" name="email" placeholder="" autocomplete="email">
                <label for="email">Email address</label>
                {% include 'components/validation.html.twig' with {'validate': 'email'} %}
            </div>
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Send Reset Link</button>
            </div>
            <div class="text-center mt-3">
                <a href="{{ uri('auth.sign-in.index') }}" class="small text-muted">Back to Sign In</a>
            </div>
        </form>
    </section>
{% endblock %}
