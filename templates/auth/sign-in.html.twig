{% extends "layout/base.html.twig" %}

{% block content %}
    <section id="sign-in" class="p-1">
        <h1>Sign In</h1>
        <form method="POST" hx-post="/sign-in">
            <div class="form-floating mb-3">
                <input type="input" class="form-control" id="email" name="email" placeholder="" autocomplete="username">
                <label for="email">Email address</label>
                 {% include 'components/validation.html.twig' with {'validate': 'email'} %}
            </div>
            <div class="form-floating">
                <input type="password" class="form-control" id="password" name="password" placeholder="" autocomplete="current-password">
                <label for="password">Password</label>
                 {% include 'components/validation.html.twig' with {'validate': 'password'} %}
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-success">Enter</button>
            </div>
        </form>
    </section>
{% endblock %}
