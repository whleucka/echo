{% extends "layout/base.html.twig" %}

{% block title %}{{ parent() }} - Reset Password{% endblock %}

{% block content %}
    <style>
    html, body {
        height: 100%;
    }
    #password-reset form {
        max-width: 380px;
        width: 100%;
    }
    #password-reset h4 {
        font-weight: 700;
    }
    #password-reset .auth-subtext {
        color: #6c757d;
        font-size: 0.9rem;
    }
    </style>
    <section id="password-reset" class="container d-flex justify-content-center align-items-center h-100">
        <form class="bg-light rounded shadow-sm p-4 pt-5 pb-4" method="POST" hx-post="{{ uri('auth.password-reset.post') }}" hx-swap="outerHTML" hx-target="#password-reset" hx-select="#password-reset">
            {{ csrf()|raw }}
            <input type="hidden" name="token" value="{{ token }}">
            <input type="hidden" name="email" value="{{ email }}">
            <h4 class="mb-1">Reset Password</h4>
            <p class="auth-subtext mb-4">Choose a new password for your account.</p>
            {% include "components/flash.html.twig" %}
            <div class="form-floating mb-3">
                <input type="password" class="form-control {% if validationErrors.password is defined %}is-invalid{% endif %}" id="password" name="password" placeholder="" autocomplete="new-password">
                <label for="password">New password</label>
                {% include 'components/validation.html.twig' with {'validate': 'password'} %}
            </div>
            <div class="form-floating mb-3">
                <input type="password" class="form-control {% if validationErrors.password_match is defined %}is-invalid{% endif %}" id="password-match" name="password_match" placeholder="" autocomplete="new-password">
                <label for="password-match">Confirm password</label>
                {% include 'components/validation.html.twig' with {'validate': 'password_match'} %}
            </div>
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary">Reset Password</button>
            </div>
            <div class="text-center mt-3">
                <a href="{{ uri('auth.sign-in.index') }}" class="small text-muted">Back to Sign In</a>
            </div>
        </form>
    </section>
{% endblock %}
